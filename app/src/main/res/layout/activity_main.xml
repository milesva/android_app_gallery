<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/but_choice_photo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:fontFamily="@font/advent_pro_thin"
                android:onClick="onClick"
                android:text="Выбрать снимок"
                android:textAllCaps="false"
                android:textColor="@color/colorAccent"
                android:textCursorDrawable="@color/colorAccent"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/img_choice_photo"
                android:layout_width="match_parent"
                android:layout_height="391dp"
                android:background="#097A6744"
                android:scaleType="centerInside"
                app:srcCompat="@android:color/transparent" />

            <Button
                android:id="@+id/but_add_descript"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:fontFamily="@font/advent_pro_thin"
                android:onClick="onClick"
                android:text="Добавить описание"
                android:textAllCaps="false"
                android:textColor="@color/colorAccent"
                android:textSize="18sp" />

            <Button
                android:id="@+id/but_further"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:fontFamily="@font/advent_pro_thin"
                android:onClick="onClick"
                android:text="Далее"
                android:textAllCaps="false"
                android:textColor="@color/colorAccent"
                android:textSize="18sp" />

            <Button
                android:id="@+id/but_redactor"
                android:layout_width="match_parent"
                android:layout_height="139dp"
                android:background="@android:color/transparent"
                android:fontFamily="@font/advent_pro_thin"
                android:onClick="onClick"
                android:text="Открыть редактор фото"
                android:textAllCaps="false"
                android:textColor="@color/colorAccent"
                android:textSize="18sp" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>