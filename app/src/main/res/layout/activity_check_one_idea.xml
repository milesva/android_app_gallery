<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_check_one_idea">

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Space
            android:layout_width="match_parent"
            android:layout_height="14dp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="443dp"
            app:srcCompat="@android:color/transparent" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="14dp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/advent_pro_thin"
                    android:text="Яркость"
                    android:textAlignment="center"
                    android:textColor="@color/colorAccent"
                    android:textSize="18sp"
                    android:typeface="normal" />

                <SeekBar
                    android:id="@+id/seekBar2"
                    style="@style/Widget.AppCompat.SeekBar.Discrete"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:max="1000"
                    android:progress="500"
                    android:scrollbarStyle="insideOverlay" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/advent_pro_thin"
                    android:text="Контрастность"
                    android:textAlignment="center"
                    android:textColor="@color/colorAccent"
                    android:textSize="18sp"
                    android:typeface="normal" />

                <SeekBar
                    android:id="@+id/seekBar"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:max="1000"
                    android:progress="500"
                    android:scrollbarStyle="insideOverlay" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/advent_pro_thin"
                    android:text="Насыщенность"
                    android:textAlignment="center"
                    android:textColor="@color/colorAccent"
                    android:textSize="18sp"
                    android:typeface="normal" />

                <SeekBar
                    android:id="@+id/seekBar_saturation"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:max="1000"
                    android:progress="500"
                    android:scrollbarStyle="insideOverlay" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/advent_pro_thin"
                    android:text="Оттенок красного"
                    android:textAlignment="center"
                    android:textColor="@color/colorAccent"
                    android:textSize="18sp"
                    android:typeface="normal" />

                <SeekBar
                    android:id="@+id/seekBar_r"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:max="1000"
                    android:progress="500"
                    android:scrollbarStyle="insideOverlay" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/advent_pro_thin"
                    android:text="Оттенок зеленого"
                    android:textAlignment="center"
                    android:textColor="@color/colorAccent"
                    android:textSize="18sp"
                    android:typeface="normal" />

                <SeekBar
                    android:id="@+id/seekBar_g"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:max="1000"
                    android:progress="500"
                    android:scrollbarStyle="insideOverlay" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/advent_pro_thin"
                    android:text="Оттенок голубого"
                    android:textAlignment="center"
                    android:textColor="@color/colorAccent"
                    android:textSize="18sp"
                    android:typeface="normal" />

                <SeekBar
                    android:id="@+id/seekBar_b"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:max="1000"
                    android:progress="500"
                    android:scrollbarStyle="insideOverlay" />

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/but_whiteblack"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"
                            android:fontFamily="@font/advent_pro_thin"
                            android:onClick="onClick"
                            android:text="1А"
                            android:textAllCaps="false"
                            android:textColor="@color/colorAccent"
                            android:textSize="18sp" />

                        <Button
                            android:id="@+id/but_whiteblack2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"
                            android:fontFamily="@font/advent_pro_thin"
                            android:onClick="onClick"
                            android:text="2А"
                            android:textAllCaps="false"
                            android:textColor="@color/colorAccent"
                            android:textSize="18sp" />

                        <Button
                            android:id="@+id/but_invert"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"
                            android:fontFamily="@font/advent_pro_thin"
                            android:onClick="onClick"
                            android:text="1В"
                            android:textAllCaps="false"
                            android:textColor="@color/colorAccent"
                            android:textSize="18sp" />

                        <Button
                            android:id="@+id/button8"
                            android:layout_width="221dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:onClick="onClick"
                            android:text="Button" />

                        <Button
                            android:id="@+id/button9"
                            android:layout_width="193dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Button" />

                        <Button
                            android:id="@+id/button10"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Button" />
                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>